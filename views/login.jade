doctype html
html
	head
		title Activate v0.1
		script(src='/webcomponentsjs/webcomponents.js')

		link(rel='import', href='/paper-material/paper-material.html')
		link(rel='import', href='/iron-form/iron-form.html')
		link(rel='import', href='/paper-button/paper-button.html')
		link(rel='import', href='/paper-input/paper-input.html')
		link(rel='import', href='/paper-tabs/paper-tabs.html')
		link(rel='import', href='/iron-pages/iron-pages.html')
		link(rel='stylesheet', href='/stylesheets/style.css')
	body
		h1 Welcome to Activate!
		template(is='dom-bind', id='tabSelector')
			paper-material(elevation="1")
				paper-tabs(selected="{{selected}}")
					paper-tab New User
					paper-tab Sign In
				iron-pages(selected="{{selected}}")
					div
						form#formAddUser(is="iron-form", name="newuser", method="post", action="/newuser", enctype="multipart/form-data")
							paper-input#inputUserName(style='font-family: "Merriweather"', type="text", placeholder="username", name="username")
							paper-input#inputPassword(type="password", placeholder="password", name="password")
							paper-button#btnSubmit(type="submit") submit
					div
						form#formAddUser(is="iron-form", name="login", method="post", action="/login", enctype="multipart/form-data")
							paper-input#inputUserName(style='font-family: "Merriweather"', type="text", placeholder="username", name="username")
							paper-input#inputPassword(type="password", placeholder="password", name="password")
							paper-button#btnSubmit(type="submit") submit
		script(type='text-javascript').
			window.addEventListener('WebComponentsReady', function() {
				var tabSelected = document.querySelector('template#tabSelector');
				tabSelected.selected = 0;
			});
